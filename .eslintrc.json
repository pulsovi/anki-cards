{
    "env": {
        "browser": true,
        "commonjs": false,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "curly": ["error", "multi-or-nest"],
        "no-console": "off",
        "quotes": ["warn", "single", {"avoidEscape": true}]
    }
}
